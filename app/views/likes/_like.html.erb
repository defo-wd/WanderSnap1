<% if user_signed_in? %>
  <% if @post.liked_by?(current_user) %>
    <%= link_to post_likes_path(@post), method: :delete, remote: true, id: "like-button" do %>
      ♥️ いいねを取り消す
    <% end %>
  <% else %>
    <%= link_to post_likes_path(@post), method: :post, remote: true, id: "like-button" do %>
      ♡ いいねする
    <% end %>
  <% end %>
   <span id="like-count"><%= @post.likes.count %></span>
<% end %>
