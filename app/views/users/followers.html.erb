<div class="container mt-5">
  <h2>Followers</h2>
  <ul class="list-group">
    <% @followers.each do |user| %>
      <li class="list-group-item">
        <%= image_tag user.profile_image.present? ? user.profile_image : 'defaultuser.png', class: "rounded-circle", style: "width: 50px; height: 50px;" %>
        <%= link_to user.name, user_path(user) %>
        <span>フォロー: <%= user.following.count %> | フォロワー: <%= user.followers.count %></span>
      </li>
    <% end %>
  </ul>
</div>
