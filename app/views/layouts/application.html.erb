<!DOCTYPE html>
<html>
<head>
  <title>WonderSnap</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <!--<script src="http://maps.google.com/maps/api/js?key=AIzaSyDUFgWwu57R50ATnJ6zmPeO3Xuphjn620w&language=ja"></script>-->
  <script src="https://kit.fontawesome.com/079d0f24e7.js" crossorigin="anonymous"></script>

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

</head>

<body>
  <header>
    <%= render 'layouts/header' %>
  </header>

  <main style="min-height: 55vh;" class="container-fluid">
  <div class="row">
    <div class="col-md-8">
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %> cake-font">
          <%= message %>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </div>
</main>



  <footer>
    <%= render 'layouts/footer' %>
  </footer>
</body>
</html>


